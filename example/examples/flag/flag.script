--- Flag example - horizontal flag with cloth animation
local ClothAnimator = require('cloth.cloth_animator')

function init(self)
    self.cloth = ClothAnimator.create_flag(msg.url('#sprite'), {
        sprite_width = 384,
        sprite_height = 192,
    })
end

function final(self)
    if self.cloth then
        self.cloth:destroy()
    end
end

function update(self, dt)
    if self.cloth then
        self.cloth:update(dt, go.get_position())
    end
end
